# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Web files (HTML, CSS, JS, JSON)
[*.{html,css,scss,sass,less,js,jsx,ts,tsx,json,vue}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# XML files
[*.{xml,config,props,targets,nuspec,resx,ruleset}]
indent_size = 2

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
indent_size = 2

# PHP files
[*.php]
indent_size = 4

# Composer files
[composer.{json,lock}]
indent_size = 4

# Package files
[package.json]
indent_size = 2

# Configuration files
[*.{ini,conf,cfg}]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Docker files
[{Dockerfile,docker-compose.yml,docker-compose.yaml}]
indent_size = 2

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Ignore generated and vendor files
[{vendor,node_modules,dist,build}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
